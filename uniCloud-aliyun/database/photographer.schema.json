			"bsonType": "string",
			"description": "摄影师形象连接"
		},
		"WorkState": {
			"bsonType": "bool",
			"description": "true为在职，false为不在职（含离职与审核中）",
			"defaultValue": true
		},
		"OnlineStatus": {
			"bsonType": "bool",
			"description": "摄影师是否处于在线接单状态",
			"defaultValue": false
		},
		"presentOrder": {
			"bsonType": "int",
			"description": "该摄影师当前所接单数，平台规定不可超过3 2022/7/12",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "订单创建时间\/发起退款时间",
			"defaultValue": {
			"$env": "now"
			}
		}
