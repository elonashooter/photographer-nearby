			"description": "摄影师电话号码"
		},
		"intro": {
			"bsonType": "string",
			"description": "自我介绍、个性签名"
		},
		"symbolsTag": {
			"bsonType": "string",
			"description": "代表作名称"
		},
		"symbolsUrl": {
			"bsonType": "array",
			"description": "代表作图片链接"
		},
		"userId": {
			"bsonType": "string",
			"description": "摄影师在user表的id"
		},
		"phoerShow": {
			"bsonType": "array",
			"description": "摄影师形象"
		},		
